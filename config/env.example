# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=config/credentials.json
GMAIL_TOKEN_FILE=config/token.json

# Database Configuration
# Default: SQLite (good for development/testing)
# DATABASE_URL=sqlite:///gmail_rules.db

# For PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/gmail_rules

# Email Processing Configuration
MAX_EMAILS_TO_FETCH=100
EMAIL_BATCH_SIZE=10

# Rules Configuration
RULES_FILE=config/rules.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/gmail_rules.log
